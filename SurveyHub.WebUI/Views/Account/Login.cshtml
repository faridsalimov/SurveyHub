@model CustomIdentityUserLoginDto

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Survey</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Survey.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" type="image/png" href="~/images/logo.png">
</head>
<body>
    <section class="account-login-container">
        <h1>Login</h1>
        <form asp-action="Login" asp-controller="Account" method="post">
            <p>Username</p>
            <input asp-for="Username" type="text" placeholder="enter your username">

            <p>Password</p>
            <input asp-for="Password" type="password" placeholder="enter your password">

            <section class="account-login-agreement">
                <input asp-for="RememberMe" type="checkbox">
                <label asp-for="RememberMe" for="agreement">Remember me</label>
            </section>

            <input class="account-login-button" type="submit" value="Login">
        </form>
        <section class="account-login-footer">
            <p>Don't have an account? <a asp-action="Register" asp-controller="Account" class="account-login-register">Register</a></p>
        </section>
    </section>
</body>
</html>